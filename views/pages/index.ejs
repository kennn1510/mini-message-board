<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <a href="/new">Add New Message</a>
    <ul>
      <% messages.forEach(message => { %>
      <li>
        User: <%= message.user %><br />
        Message: <%= message.text %><br />
        Date: <%= message.added %><br />
        <a href="/message/<%= messages.indexOf(message)%>">Open Message</a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
